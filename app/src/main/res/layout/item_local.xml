<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_local"
    >
    <include
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_loading"
        android:visibility="gone"
        />
    <include
        android:id="@+id/notfound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_datanotfound"
        android:visibility="gone"
        />
    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/img_cnx2"
                    android:id="@+id/iv_banner"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="175dp" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_trending_thumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/normal_margin"
                    android:src="@drawable/ic_heart" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/iv_trending_like"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:layout_marginTop="@dimen/normal_margin"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="title"
                        android:textStyle="bold"
                        android:textColor="#010c1f"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_rating"
                            android:text="4.7"
                            android:drawableStart="@drawable/ic_star"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginTop="@dimen/normal_margin"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:drawablePadding="@dimen/activity_vertical_four"
                            android:textColor="#ffd322"
                            />
                        <TextView
                            android:id="@+id/tv_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_vertical_four"
                            android:layout_marginTop="@dimen/normal_margin"
                            android:drawablePadding="@dimen/activity_vertical_four"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="(67 reviews) | 15 km from here"
                            android:textColor="#8792a0"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,080 THB"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/activity_vertical_eight"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:layout_marginEnd="@dimen/normal_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_eight"
                        android:layout_gravity="end"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#d5d7db" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>