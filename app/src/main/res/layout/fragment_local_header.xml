<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/iv_location"
            android:scaleType="centerCrop"
            android:src="@drawable/img_lo">
        </ImageView>
        <LinearLayout
            android:background="@drawable/customborder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/iv_image"
            android:id="@+id/layout_title"
            android:weightSum="3"
            android:paddingBottom="@dimen/activity_vertical_16"
            >
            <TextView
                android:id="@+id/tv_name_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_heart"
                android:text="Doi Angkang Touring : Culture"
                android:layout_marginTop="@dimen/activity_vertical_20"
                android:textColor="#010c1f"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingLeft="@dimen/normal_margin"
                android:paddingRight="@dimen/normal_margin"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/normal_margin"
                android:paddingRight="@dimen/normal_margin">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_star">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 4.4"
                    android:textColor="#ffd322" />
                <TextView
                    android:id="@+id/tv_planDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" (468 Reviews) | 3 Hours"
                    android:textColor="#123123" />
            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/tv_description_coupon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/normal_margin"
                android:paddingRight="@dimen/normal_margin"
                android:layout_marginTop="@dimen/activity_vertical_10"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <include
                    layout="@layout/item_count"

                    />

                <TextView
                    android:id="@+id/tv_point_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="1,080 THB / Person"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="3"
            android:background="@color/colorWhite">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="@dimen/activity_vertical_four"
                android:layout_marginTop="@dimen/normal_margin"
                android:src="@drawable/img_local"
                android:layout_weight="0.5"/>

            <LinearLayout
                android:id="@+id/ln_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1.5">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kumkaew Jaidee"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Plans | "
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_reviewer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_plan"
                        android:text="1 Reviewer"
                        android:textColor="@color/colorPrimary" />
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/bt_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>