<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_redeem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_16"
    android:paddingLeft="@dimen/activity_vertical_16"
    android:paddingRight="@dimen/activity_vertical_16"
    android:paddingBottom="@dimen/activity_vertical_24"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You donâ€™t have enough points"
        android:textSize="14sp"
        android:textColor="#515968"
