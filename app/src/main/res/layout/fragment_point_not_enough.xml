    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You currently have 780 points which not enough to redeem. Please keep being active!"
        android:textSize="14sp"
        android:textColor="#515968"
        android:layout_marginTop="@dimen/activity_vertical_twele"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_blue2"
