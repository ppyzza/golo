<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f7f8"
        android:layout_marginBottom="@dimen/activity_vertical_4">

        <ImageView
            android:id="@+id/image_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_below="@+id/image_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:orientation="horizontal"
            android:id="@+id/layout_tv_name_coupon"
            android:layout_marginTop="@dimen/activity_vertical_20"
            android:weightSum="2">
        <TextView
            android:id="@+id/tv_name_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_heart"
            android:text="Boston Lobster"
            android:textSize="20sp"
            android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_below="@+id/layout_tv_name_coupon"
            android:id="@+id/tv_description_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginTop="@dimen/activity_vertical_4"
            android:text="TextView" />

    <LinearLayout
        android:layout_below="@+id/tv_description_coupon"
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_vertical_10"
        android:paddingRight="@dimen/activity_vertical_10"
        android:paddingTop="@dimen/activity_vertical_7"
        android:paddingBottom="@dimen/activity_vertical_7"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/layout_sum_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_vertical_10">

            <TextView
                android:id="@+id/tv_point_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800 point"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From 1000 points"
                android:textColor="#ff0000"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_redeem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Redeem"
            android:radius="20dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_blue2"
            />

    </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_1"
        android:background="#d5d7db"/>

</LinearLayout>