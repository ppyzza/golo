<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_offers"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_compass"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="Voucher"
            android:padding="1sp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            />
    </FrameLayout>
    <TextView
        android:layout_marginTop="@dimen/activity_vertical_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#010c1f"
        android:text="Title"
        android:textSize="10sp"
        android:id="@+id/tv_title"
        android:layout_marginStart="@dimen/activity_vertical_eight"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <TextView
        android:layout_marginTop="@dimen/activity_vertical_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#515968"
        android:text="Title"
        android:maxLines="2"
        android:id="@+id/tv_desc"
        android:textSize="12sp"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/activity_vertical_eight"
        android:layout_marginBottom="@dimen/activity_vertical_eight"
        />

</LinearLayout>
</androidx.cardview.widget.CardView>