<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/toolbar_promotion_detail" />
    <ScrollView
        android:layout_marginBottom="54dp"
        android:layout_below="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_image_promotion"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                />

            <LinearLayout
                android:background="@drawable/customborder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/iv_image_promotion"
                android:id="@+id/layout_title"
                android:weightSum="3"
                android:paddingBottom="@dimen/activity_vertical_16"
                >
                        <TextView
                        android:id="@+id/tv_name_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_heart"
                            android:layout_marginTop="@dimen/activity_vertical_20"
                        android:textColor="#010c1f"
                        android:textSize="14sp"
                        android:textStyle="bold"
                            android:paddingLeft="@dimen/normal_margin"
                            android:paddingRight="@dimen/normal_margin"/>

                <TextView
                    android:layout_below="@+id/layout_tv_name_coupon"
                    android:id="@+id/tv_description_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/normal_margin"
                    android:paddingRight="@dimen/normal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_4"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_below="@+id/tv_description_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/normal_margin"
                    android:paddingRight="@dimen/normal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_10"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="2">

                    <include
                        layout="@layout/item_count"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_4"
                        android:orientation="vertical"
                        android:weightSum="2"
                        >
                        <TextView
                            android:id="@+id/tv_point_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="2"
                            android:text="800 point"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="2"
                            android:text="From 1000 points"
                            android:textAlignment="textEnd"
                            android:textColor="#ff0000"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/layout_voucher_detail"
                >

                <TextView
                    android:id="@+id/location_period_from_to"
                    android:paddingLeft="@dimen/normal_margin"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_vertical_20"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#010c1f"
                    android:paddingTop="@dimen/activity_vertical_10"
                    android:paddingBottom="@dimen/activity_vertical_10"
                    android:text="Voucher Detail" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/customborder"
                android:layout_below="@+id/layout_voucher_detail">
            <TextView

                android:id="@+id/tv_detail"
                android:paddingLeft="@dimen/normal_margin"
                android:paddingRight="@dimen/normal_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_margin="@dimen/activity_vertical_16"
            />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/customborder"
        >

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_vertical_10"
            android:paddingRight="@dimen/activity_vertical_10"
            android:paddingTop="@dimen/activity_vertical_7"
            android:paddingBottom="@dimen/activity_vertical_7"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/layout_sum_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_vertical_10">

                <TextView
                    android:id="@+id/tv_sum_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800 point"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_your_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Point 1000"
                    android:textColor="#515968"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/button_redeem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Redeem"
                android:radius="20dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_blue2"
                />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>