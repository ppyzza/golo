<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/iv_location"
            android:scaleType="centerCrop"
            android:src="@drawable/unnamed">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:id="@+id/rl_content"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ln_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1.7">

                <TextView
                    android:id="@+id/tv_planName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chiang Mai 2020"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_planDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue, Sep 01 - Sat, Sep 05"
                    android:textColor="#123123" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bangkok | 5 Day | 36 Places"
                        android:textColor="#2c85ff" />

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/iv_trending_like"
                android:src="@drawable/ic_heart"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.3"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>