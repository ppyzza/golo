<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_redeem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_16"
    android:paddingLeft="@dimen/activity_vertical_16"
    android:paddingRight="@dimen/activity_vertical_16"
    android:paddingBottom="@dimen/activity_vertical_24"
    >

    <TextView
        android:id="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem with 800 point?"
        android:textSize="14sp"
        android:textColor="#515968"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >

        <Button
            android:id="@id/bt_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:text="cancel"
            android:textColor="#2c84ff"
            android:background="@drawable/bg_blue_white2"
            android:layout_marginRight="@dimen/activity_vertical_5"/>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_blue2"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:text="Yes, redeem"
            android:layout_marginLeft="@dimen/activity_vertical_5"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>