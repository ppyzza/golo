<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:contentInsetStartWithNavigation="50dp"
            app:navigationIcon="@mipmap/ic_n_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Must See / Offer"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ffff"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/tv_user_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Point : 0"
                    android:textSize="@dimen/activity_vertical_10"
                    android:padding="@dimen/activity_vertical_5"
                    android:background="@drawable/bg_orange"
                    android:textColor="#ffff"
                    android:textAlignment="center"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


</com.google.android.material.appbar.AppBarLayout>